<p id="notice"><%= notice %></p>

<%# <h1>Posts</h1> %>

<table>
  <%# <thead>
    <tr>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead> %>

  <tbody>
    <% @posts.each do |post| %>
      <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= gravatar_image_tag(post.user.email, size: 64, alt: post.user.name)%>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                <% if user_signed_in? %>
                    <strong><%= post.user.name %></strong><br/>
                    <small><%= post.user.username %></small><br/>
                <% end %>
                <p> <%= post.post %></p>
            </div>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to post, class: "level-item" do %>
                            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                        <% end %>
                        <% if user_signed_in? %>
                            <%= link_to edit_post_path(post), class: "level-item" do %>
                                <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                            <% end %>
                            <%= link_to post, method: :delete, data: {confirm: "are you sure you want to delete this post?"
                            } do %>
                                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <% end %>
                        <% end %>
                         
                    </div>
                </nav>
            </div>
        </article>

    </div>
    <% end %>
    
  </tbody>
</table>

<br>

